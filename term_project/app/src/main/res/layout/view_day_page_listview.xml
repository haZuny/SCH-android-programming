<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewDayList_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정: " />

        <TextView
            android:id="@+id/viewDayList_text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간: " />

        <TextView
            android:id="@+id/viewDayList_text_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지출액: " />
    </LinearLayout>

    <Switch
        android:id="@+id/viewDayList_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

</LinearLayout>